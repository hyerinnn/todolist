<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<configuration>

    <springProfile name="default">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%level] [%logger{0}.%method:%line]: %msg%n</pattern>
            </encoder>
        </appender>


        <logger name="com.hyerin.todolist" level="DEBUG" />

        <root>
            <level>WARN</level>
            <appender-ref ref="console" />
        </root>
    </springProfile>

</configuration>